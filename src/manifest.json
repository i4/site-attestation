{

  "manifest_version": 3,
  "name": "check-vm",
  "homepage_url": "https://gitlab.com/ruediger.kapitza/twebload",
  "icons": {
    "48": "ravm.svg"
  },

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "scripting",
    "tabs"
  ],

  "host_permissions": ["https://*/*"],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  },

  "page_action": {
    "browser_style" : true,
    "default_icon": "hazard-sign.svg",
    "default_title": "Attestation Popup",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "browser_style": true,
    "page": "settings.html"
  },

  "web_accessible_resources": [
    {
      "resources" : [
        "new-remote-attestation.html",
        "blocked-remote-attestation.html",
        "missing-remote-attestation.html",
        "differs-remote-attestation.html"
      ],
      "matches" : [ "https://*/*" ]
    }
  ]

}
  

