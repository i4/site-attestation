{

  "manifest_version": 3,
  "name": "check-vm",
  "homepage_url": "https://gitlab.com/ruediger.kapitza/twebload",
  "icons": {
    "48": "ravm.svg"
  },  

  "permissions": [
    "storage",
    "webRequest", 
    "webRequestBlocking",
    "activeTab",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "*://transparent-vm.net/*",
    "<all_urls>"
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }   
  },

  "page_action": {
    "browser_style" : true,
    "default_icon": "ravm.svg",
    "default_title": "Attestation Popup",
    "default_popup": "popup.html",
    "show_matches": [ "*://*/*" ]
  },

  "options_ui": {
    "browser_style": true,
    "page": "settings.html"
  },

  "web_accessible_resources": [
    {
      "resources" : [ "remote-attestation.html" ],
      "matches" : [ "https://*/*" ]
    }
  ]
  
}
  

